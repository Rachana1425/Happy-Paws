<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ShihTzu">

    <ImageView
        android:id="@+id/imShih"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:srcCompat="@drawable/shih" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/imShih"
        android:layout_marginBottom="-79dp"
        android:text="SHIH TZU \n Rs: 23,000/-"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tvShih"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="90dp"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <Button
        android:id="@+id/callButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Call Now"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/callTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="9880549343"
        android:textColor="@android:color/black"
        android:visibility="invisible" />

</LinearLayout>