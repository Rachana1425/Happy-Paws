<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Blood">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorText"
        android:id="@+id/toolBar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:elevation="4dp"/>

    <ImageView
        android:id="@+id/bloodimage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/toolBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:gravity="center"
        app:srcCompat="@drawable/bloodpaw" />

    <Button
        android:id="@+id/donorbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bloodimage"
        android:layout_marginBottom="-60dp"
        android:text="DONOR"
        android:clickable="true"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25sp" />

    <Button
        android:id="@+id/recbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/donorbtn"
        android:layout_marginBottom="-50dp"
        android:text="RECEIVER"
        android:clickable="true"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25sp"/>


    <ListView
        android:id="@+id/listViewBlood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recbtn"
        android:layout_alignBottom="@+id/recbtn"
        android:layout_marginTop="90dp"
        android:clickable="true"
        android:layout_marginBottom="-600dp">

    </ListView>

</RelativeLayout>
